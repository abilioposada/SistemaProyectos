{
	"preset": "laravel",
	"rules": {
		"blank_line_after_opening_tag": false,
		"braces": [],
		"cast_spaces": [],
		"class_definition": [],
		"curly_braces_position": [],
		"function_declaration": [],
		"linebreak_after_opening_tag": false,
		"no_spaces_around_offset": false,
		"not_operator_with_successor_space": false,
		"single_blank_line_before_namespace": false,
		"single_quote": false,
		"trim_array_spaces": false,
		"binary_operator_spaces": {
			"default": "single_space",
			"operators": {
				"=": "align_single_space_minimal",
				"=>": "align_single_space_minimal"
			}
		},
		"blank_lines_before_namespace": {
			"min_line_breaks": 0,
			"max_line_breaks": 0
		},
		"concat_space": {
			"spacing": "one"
		},
		"control_structure_continuation_position": {
			"position": "next_line"
		},
		"phpdoc_align": {
			"align": "left"
		},
		"single_line_comment_style": {
			"comment_types": [
				"asterisk"
			]
		},
		"single_space_after_construct": {
			"constructs": [
				"abstract",
				"as",
				"attribute",
				"break",
				"case",
				"catch",
				"class",
				"clone",
				"comment",
				"const",
				"const_import",
				"continue",
				"do",
				"echo",
				"elseif",
				"extends",
				"final",
				"for",
				"foreach",
				"function_import",
				"global",
				"goto",
				"if",
				"implements",
				"include",
				"include_once",
				"instanceof",
				"insteadof",
				"interface",
				"match",
				"named_argument",
				"new",
				"open_tag_with_echo",
				"php_doc",
				"php_open",
				"print",
				"private",
				"protected",
				"public",
				"require",
				"require_once",
				"return",
				"static",
				"throw",
				"trait",
				"use",
				"use_lambda",
				"use_trait",
				"var",
				"while",
				"yield",
				"yield_from"
			]
		},
		"spaces_inside_parentheses": {
			"space": "single"
		}
	}
}